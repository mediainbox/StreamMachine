{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2019",
    "lib": [ "es2019" ],
    "rootDir": "src",
    "outDir": "./build",
    "sourceMap": true,
    "esModuleInterop": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "skipLibCheck": true,
    "strictBindCallApply": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": false,
    "paths": {
      "dom": [
        ".sink.d.ts"
      ]
    }
  },
  "exclude": [
    "bin",
    "node_modules",
    "other"
  ]
}
